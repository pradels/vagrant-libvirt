<interface type='<%= @type %>'>
	<% if @mac %>
  	<mac address='<%= @mac %>'/>
  <% end %>
  <%if @type == 'direct'%>
  <source dev='<%= @device %>' mode='<%= @mode %>'/>
  <model type='<%=@model_type%>'/>
  <% else %>
  <source bridge='<%=@device%>'/>
  <model type='<%=@model_type%>'/>
  <% end %>
</interface>


